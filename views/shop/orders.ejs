<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>

        <% if (orders.length <= 0) { %>
            <h1>No Orders</h1>
        <% } else { %> 
            <ul>
                <% orders.forEach((order) => { %>
                    <li>
                        <h3>Order #: <%= order.id %></h3>
                        <ul>
                            <% order.products.forEach(product => { %>
                                <li>
                                    <%= product.title %> (<%= product.orderItem.quantity %>)
                                </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }) %>
            </ul>
        <% } %>

    </main>
    <%- include('../includes/end.ejs') %>